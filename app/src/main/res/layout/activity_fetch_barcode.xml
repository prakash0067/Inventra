<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <!-- Top Toolbar (elevated and modern) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="0dp"
        android:background="@drawable/toolbar_rounded_bg"
        android:elevation="8dp"
        app:title="BarCode Scanner"
        app:titleTextColor="@android:color/black"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
        app:navigationIconTint="@android:color/black" />

    <!-- Modern Scan Button (Material style) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/baseline_qr_code_scanner_24"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white" />

</FrameLayout>
